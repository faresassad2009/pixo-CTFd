FROM python

WORKDIR /

ENV MATTERMOST_WEBHOOK_IS_BOT=
ENV MATTERMOST_WEKHOOK_BOT_TOKEN=
ENV MATTERMOST_WEBHOOK_URL=
ENV MATTERMOST_WEBHOOK_CHANNEL=
ENV MATTERMOST_WEBHOOK_USERNAME=
ENV MATTERMOST_WEBHOOK_ICON_EMOJI=
ENV MATTERMOST_WEBHOOK_AUTH_TOKEN=

COPY requirements.txt requirements.txt
RUN pip3 install -r requirements.txt

COPY server.py server.py

EXPOSE 80

CMD [ "python3", "server.py"]
